<div class="flats">
  <% @flats.each do |flat| %>
  <div class="flat">
    <div class="flat-card-image" style="background-image: url('<%= flat.image_url %>')"></div>
    <h3><%= flat.name %></h3>
    <div><%= flat.address %></div>
    <div><%= flat.description %></div>
    <div>$/night: <%= flat.price_per_night %></div>
    <div style="margin-bottom: 20px">Number of guests: <%= flat.number_of_guests %></div>
    <%= link_to 'mas info?', flat_path(flat), class: 'btn' %>
    <%= link_to 'editar?', edit_flat_path(flat), class: 'btn' %>
    <%= link_to 'borrar?', flat_path(flat), method: :delete, class: 'btn' %>
  </div>
  <% end %>
</div>
